<Window
	x:Class="CrossBreed.Windows.Updater.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:CrossBreed.Windows.Updater"
	mc:Ignorable="d"
	x:Name="this"
	Title="MainWindow" SizeToContent="Height" Width="400">
	<StackPanel DataContext="{Binding ElementName=this}" Margin="20">
		<TextBlock Text="{Binding CurrentAction}" FontSize="18" TextWrapping="Wrap" />
		<ProgressBar Value="{Binding Progress}" Height="20" Foreground="Purple"></ProgressBar>
	</StackPanel>
</Window>